<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.shopsmart.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_my_order"
        android:name="com.example.shopsmart.ui.my_order.MyOrderFragment"
        android:label="@string/title_my_order"
        tools:layout="@layout/fragment_my_order" />

    <fragment
        android:id="@+id/navigation_on_sale"
        android:name="com.example.shopsmart.ui.on_sale.OnSaleFragment"
        android:label="@string/title_on_sale"
        tools:layout="@layout/fragment_on_sale" />

    <fragment
        android:id="@+id/navigation_my_account"
        android:name="com.example.shopsmart.ui.my_account.MyAccountFragment"
        android:label="@string/title_my_account"
        tools:layout="@layout/fragment_my_account" />

</navigation>